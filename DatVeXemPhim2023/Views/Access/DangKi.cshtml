@model TTaiKhoan

@using (Html.BeginForm("DangKi", "Access", FormMethod.Post))
{
    <!-- Include registration form fields -->
    <div class="form-group">
        @Html.TextBoxFor(x => x.Username, new { @class = "form-control form-control-lg", placeholder = "Tên Đăng Nhập", required = "required", autofocus = "autofocus" })
    </div>
    <div class="form-group">
        @Html.TextBoxFor(x => x.Password, new { @class = "form-control form-control-lg", type = "Mật khẩu", placeholder = "Mật Khẩu" })
    </div>
    <div class="form-group">
        @Html.TextBoxFor(x => x.Sdt, new { @class = "form-control form-control-lg", type = "SĐT", placeholder = "Số Điện Thoại" })
    </div>
    <div class="form-group">
        @Html.TextBoxFor(x => x.DiaChi, new { @class = "form-control form-control-lg", type = "Địa Chỉ", placeholder = "Địa chỉ" })
    </div>
    <div class="form-group">
        @Html.TextBoxFor(x => x.HoTen, new { @class = "form-control form-control-lg", type = "Họ và tên", placeholder = "Họ và Tên" })
    </div>

    <!-- Add other registration fields as needed -->

    <div class="mt-3" style="text-align: center;">
    <button type="submit" style="background-color: #4CAF50; /* Màu nền xanh lá cây */
                                     color: white; /* Màu chữ trắng */
                                     padding: 10px 20px; /* Kích thước độ lớn của nút */
                                     text-align: center; /* Canh giữa văn bản */
                                     text-decoration: none;
                                     display: inline-block;
                                     font-size: 16px;
                                     margin: 4px 2px;
                                     cursor: pointer;
                                     border-radius: 4px; /* Góc bo tròn nút */">
        Đăng Ký
    </button>
</div>

}